<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark"
    tools:context="com.example.station.networkmonitoringservice.MainActivity">


    <TextView
        android:textColor="@color/colorText"
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Not loaded"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103"
        app:layout_constraintHorizontal_bias="0.502" />

    <ToggleButton
        android:id="@+id/btnStartStop"
        android:layout_width="274dp"
        android:layout_height="89dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="16dp"
        android:text="Not loaded"
        android:textOff="@string/stop"
        android:textOn="@string/start"
        android:textSize="25sp"
        android:background="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus"
        app:layout_constraintVertical_bias="0.858" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="268dp"
        android:layout_height="91dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/desc"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="18sp"

        app:layout_constraintBottom_toTopOf="@+id/btnStartStop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus"
        app:layout_constraintVertical_bias="0.358" />


    <ImageView

        android:id="@+id/imgStatus"
        android:layout_width="60dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/ic_done_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintLeft_toRightOf="@+id/txtStatus"
        android:layout_marginLeft="18dp"
        tools:layout_editor_absoluteY="54dp" />


</android.support.constraint.ConstraintLayout>
